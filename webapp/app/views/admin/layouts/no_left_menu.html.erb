<!DOCTYPE html>
<html>
<head>
  <title><%= page_title %> - Chanelink</title>
  <%= include_stylesheets :admin %>
  <%= javascript_include_tag 'jquery-1.7.2.min', 'jquery-ui-1.9.2.custom.min', 'rails', 'application' %>

  <%= csrf_meta_tag %>
</head>
<body>
  <header>
    <div class="plc">
      <h1><a href="<%= admin_root_path %>"></a></h1>
      <div class="backoffice">Backoffice</div>
      <%= render 'admin/layouts/top_panel' %>
    </div>
  </header>
  <section id="contents">
    <div class="plc">
      <div id="mainContents">
        <%= render 'layouts/notification' %>
        <%= yield %>
      </div>
    </div>
  </section>
  <%= render 'admin/layouts/footer' %>
</body>
</html>
