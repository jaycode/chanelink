<% page_title t('admin.login.label.title') %>
<div id="login">
  <div class="col6">
    <h2><%= raw t('admin.login.label.heading') %></h2>
    <%= form_tag admin_session_path do %>
      <p>
        <label><%=  t('admin.login.label.email') %></label>
        <%= text_field_tag :email, params[:email] %>
      </p>
      <p>
        <label><%= t('admin.login.label.password') %></label>
        <%= password_field_tag :password, nil %>
      </p>
      <p>
        <label>&nbsp;</label>
        <%= submit_tag t('admin.login.label.title') %>
      </p>
    <% end %>
      <p>
        <label>&nbsp;</label>
        <%= link_to t('password.reset.link'), admin_password_reset_path %>
      </p>
  </div>
</div>
