<p>
  <label><%= t('admin.accounts.new.label.name') %><%= required %></label>
  <%= f.text_field :name %>
</p>
<p>
  <label><%= t('admin.accounts.new.label.address') %><%= required %></label>
  <%= f.text_area :address, :rows => 6 %>
</p>
<p>
  <label><%= t('admin.accounts.new.label.telephone') %><%= required %></label>
  <%= f.text_field :telephone %>
</p>
<p>
  <label><%= t('admin.accounts.new.label.contact_name') %><%= required %></label>
  <%= f.text_field :contact_name %>
</p>
<p>
  <label><%= t('admin.accounts.new.label.contact_email') %><%= required %></label>
  <%= f.text_field :contact_email %>
</p>
<% if !@account.new_record? %>
  <p>
    <label><%= t('admin.accounts.new.label.enable') %></label>
    <%= check_box_tag 'account[enabled]', nil, @account.disabled? ? false : true %>
    <strong><%= t('admin.accounts.new.label.disable_warning') %></strong>
  </p>
  <p class="alignRight">
    <% if can? :delete, Account %>
      <%= link_to t('admin.accounts.delete.link'), '#', :class => 'btnActionGrey', :onclick => "javascript: deleteAccountDialog('#{t('admin.accounts.delete.dialog.title')}', '#{delete_account_dialog_body}', '#{delete_admin_account_path(@account)}'); return false;" %>
    <% end %>
  </p>
<% end %>
<br/>