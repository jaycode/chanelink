<%= form_for @property do |f| %>
  <p>
    <label><%= t('admin.properties.new.label.name') %><%= required %></label>
    <%= f.text_field :name %>
  </p>
  <p>
    <label><%= t('admin.properties.new.label.address') %><%= required %></label>
    <%= f.text_area :address, :rows => 6 %>
  </p>
  <p>
    <label><%= t('admin.properties.new.label.city') %><%= required %></label>
    <%= f.text_field :city %>
  </p>
  <p>
    <label><%= t('admin.properties.new.label.state') %><%= required %></label>
    <%= f.text_field :state %>
  </p>
  <p>
    <label><%= t('admin.properties.new.label.country') %><%= required %></label>
    <%= f.select :country_id, options_for_select(Country.select_list, @property.country_id) %>
  </p>
  <p>
    <label><%= t('admin.properties.new.label.postcode') %><%= required %></label>
    <%= f.text_field :postcode %>
  </p>

  <p>
    <label><%= t('admin.properties.new.label.minimum_room_rate') %><%= required %></label>
    <%= f.text_field :minimum_room_rate %>
  </p>
  <p>
    <label class="readOnly"><%= t('admin.properties.new.label.currency') %></label>
    <%= @property.currency.blank? ? "N/A" : "#{@property.currency.code} - #{@property.currency.name}" %>
  </p>
  <br/>
  <p>
    <%= f.submit t("button.save") %>
  </p>
<% end %>